<section class="container center text-center">
  <h1>Admin Dashboard</h1>
  <br>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Counts</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">1</th>
        <td>Products in database</td>
        <td><%= @product_count %></td>
      </tr>
      <tr>
        <th scope="row">2</th>
        <td>Categories in database</td>
        <td><%= @category_count %></td>
      </tr>
    </tbody>
  </table>

  <%= link_to 'Product List', [:admin, :products], class: "btn btn-primary" %>
</section>
